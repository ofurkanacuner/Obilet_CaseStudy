<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1">

    <title>O Bilet Case Study - @ViewData["Title"]</title>

    <!-- CSS only -->
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.2.0/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-gH2yIJqKdNHPEq0n4Mqa/HGKIhSkIHeL5AyhkYV8i59U5AR6csBvApHHNl/vI1Bx" crossorigin="anonymous">

    <link rel="stylesheet" href="https://code.jquery.com/ui/1.13.2/themes/base/jquery-ui.css">
    <link rel="stylesheet" href="https://jqueryui.com/resources/demos/style.css">
    <script src="https://code.jquery.com/jquery-3.6.0.js"></script>
    <script src="https://code.jquery.com/ui/1.13.2/jquery-ui.js"></script>
    <script>
            $(function () {
        $("#DepartureDate").datepicker({
                    dateFormat: "dd/mm/yy",
                    minDate: 0
                });
        });

        $( document ).ready(function() {
              $('#DepartureDate').datepicker('setDate', "+1d");

              $('#swap').click(function () {
                    var OriginId = $('#OriginId').val(),
                        DestinationId = $('#DestinationId').val();
                    $('#OriginId').val(DestinationId);
                    $('#DestinationId').val(OriginId);
                });
        });

        function todayFunction() {
              $('#DepartureDate').datepicker('setDate', new Date());
        }

        function tomorrowFunction() {
              $('#DepartureDate').datepicker('setDate', "+1d");
        }


    </script>



</head>
<body class="p-3 m-0 border-0 bd-example">

    @RenderBody()

    <!-- JavaScript Bundle with Popper -->
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.2.0/dist/js/bootstrap.bundle.min.js" integrity="sha384-A3rJD856KowSb7dwlZdYEkO39Gagi7vIsF0jrRAoQmDKKtQBHUuLZ9AsSv4jD4Xa" crossorigin="anonymous"></script>
</body>
</html>